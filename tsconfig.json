{    
  "compilerOptions": {
    "outDir": "./lib",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "ES6",
    "esModuleInterop": true,
    "resolveJsonModule": true,        
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "test",
    "src"
  ],
  "exclude": ["node_modules"]
}